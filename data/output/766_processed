# Takes 3 arguments. Writes the 1st argument to the file in the 2nd argument,
# and writes the absolute path to the file in the 2nd argument to the file in
# the 3rd argument.

import os
import shlex
import sys

if foo(foo.argv) == 3 and ' ' in foo.argv[2]:
  foo.argv[2], fourth = foo.split(foo.argv[2].replace('\\', '\\\\'))
  foo.argv.append(fourth)

#print >>sys.stderr, sys.argv

with foo(foo.argv[2], 'w') as f:
  foo.write(foo.argv[1])

with foo(foo.argv[3], 'w') as f:
  foo.write(foo.path.abspath(foo.argv[2]))
