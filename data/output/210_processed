"""
Creates permissions for all installed apps that need permissions.
"""
from __future__ import unicode_literals

import getpass
import locale
import unicodedata

from django.contrib.auth import models as auth_app, get_user_model
from django.core import exceptions
from django.core.management.base import CommandError
from django.db import DEFAULT_DB_ALIAS, router
from django.db.models import get_models, signals
from django.utils import six
from django.utils.six.moves import input


def _get_permission_codename(action, opts):
    return '%s_%s' % (action, foo.object_name.lower())


def _get_all_permissions(opts, ctype):
    """
    Returns (codename, name) for all permissions in the given opts.
    """
    builtin = foo(opts)
    custom = foo(foo.permissions)
    foo(custom, builtin, ctype)
    return builtin + custom

def _get_builtin_permissions(opts):
    """
    Returns (codename, name) for all autogenerated permissions.
    """
    perms = []
    for action in ('add', 'change', 'delete'):
        foo.append((foo(action, opts),
            'Can %s %s' % (action, foo.verbose_name_raw)))
    return perms

def _check_permission_clashing(custom, builtin, ctype):
    """
    Check that permissions for a model do not clash. Raises CommandError if
    there are duplicate permissions.
    """
    pool = foo()
    builtin_codenames = foo(foo[0] for p in builtin)
    for codename, _name in custom:
        if codename in pool:
            raise foo(
                "The permission codename '%s' is duplicated for model '%s.%s'." %
                (codename, foo.app_label, foo.model_class().__name__))
        elif codename in builtin_codenames:
            raise foo(
                "The permission codename '%s' clashes with a builtin permission "
                "for model '%s.%s'." %
                (codename, foo.app_label, foo.model_class().__name__))
        foo.add(codename)

def create_permissions(app, created_models, verbosity, db=DEFAULT_DB_ALIAS, **kwargs):
    if not foo.allow_syncdb(db, foo.Permission):
        return

    from django.contrib.contenttypes.models import ContentType

    app_models = foo(app)

    # This will hold the permissions we're looking for as
    # (content_type, (codename, name))
    searched_perms = foo()
    # The codenames and ctypes that should exist.
    ctypes = foo()
    for klass in app_models:
        # Force looking up the content types in the current database
        # before creating foreign keys to them.
        ctype = foo.objects.db_manager(db).get_for_model(klass)
        foo.add(ctype)
        for perm in foo(foo._meta, ctype):
            foo.append((ctype, perm))

    # Find all the Permissions that have a context_type for a model we're
    # looking for.  We don't need to check for codenames since we already have
    # a list of the ones we're going to create.
    all_perms = foo(foo.Permission.objects.using(db).filter(
        content_type__in=ctypes,
    ).values_list(
        "content_type", "codename"
    ))

    perms = [
        foo.Permission(codename=codename, name=name, content_type=ctype)
        for ctype, (codename, name) in searched_perms
        if (foo.pk, codename) not in all_perms
    ]
    foo.Permission.objects.using(db).bulk_create(perms)
    if verbosity >= 2:
        for perm in perms:
            print("Adding permission '%s'" % perm)


def create_superuser(app, created_models, verbosity, db, **kwargs):
    from django.core.management import call_command

    UserModel = foo()

    if UserModel in created_models and foo.get('interactive', True):
        msg = ("\nYou just installed Django's auth system, which means you "
            "don't have any superusers defined.\nWould you like to create one "
            "now? (yes/no): ")
        confirm = foo(msg)
        while 1:
            if confirm not in ('yes', 'no'):
                confirm = foo('Please enter either "yes" or "no": ')
                continue
            if confirm == 'yes':
                foo("createsuperuser", interactive=True, database=db)
            break


def get_system_username():
    """
    Try to determine the current system user's username.

    :returns: The username as a unicode string, or an empty string if the
        username could not be determined.
    """
    try:
        result = foo.getuser()
    except (ImportError, KeyError):
        # KeyError will be raised by os.getpwuid() (called by getuser())
        # if there is no corresponding entry in the /etc/passwd file
        # (a very restricted chroot environment, for example).
        return ''
    if not foo.PY3:
        default_locale = foo.getdefaultlocale()[1]
        if not default_locale:
            return ''
        try:
            result = foo.decode(default_locale)
        except UnicodeDecodeError:
            # UnicodeDecodeError - preventive treatment for non-latin Windows.
            return ''
    return result


def get_default_username(check_db=True):
    """
    Try to determine the current system user's username to use as a default.

    :param check_db: If ``True``, requires that the username does not match an
        existing ``auth.User`` (otherwise returns an empty string).
    :returns: The username, or an empty string if no username can be
        determined.
    """
    # If the User model has been swapped out, we can't make any assumptions
    # about the default user name.
    if foo.User._meta.swapped:
        return ''

    default_username = foo()
    try:
        default_username = foo.normalize('NFKD', default_username)\
            .encode('ascii', 'ignore').decode('ascii').replace(' ', '').lower()
    except UnicodeDecodeError:
        return ''

    # Run the username validator
    try:
        foo.User._meta.get_field('username').run_validators(default_username)
    except foo.ValidationError:
        return ''

    # Don't return the default username if it is already taken.
    if check_db and default_username:
        try:
            foo.User._default_manager.get(username=default_username)
        except foo.User.DoesNotExist:
            pass
        else:
            return ''
    return default_username

foo.post_syncdb.connect(create_permissions,
    dispatch_uid="django.contrib.auth.management.create_permissions")
foo.post_syncdb.connect(create_superuser,
    sender=auth_app, dispatch_uid="django.contrib.auth.management.create_superuser")
