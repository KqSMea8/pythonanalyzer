def deseqNormalize(infile,
                   time_points,
                   reps,
                   conditions=None):
    '''
    Library size normalisation and variance stabilizing transformation of
    timeseries RNA-seq data

    :param infile: count table from NGS-seq experiment
    :type infile: str
    :param time_points: time point labels
    :type time_points: str list
    :param reps: replicates labels
    :type reps: str list
    :param conditions: if  multiple experimental conditions
    are to be normalised at the same time
    :type conditions: str list
    '''
    # MM: NB - this should be split into separate library size
    # normalisation and VST transformations
    # maybe add in different transformation options.

    foo.activate()
    reps = reps

    # load library
    foo('''suppressMessages(library("DESeq"))''')

    # generates a lists for the design data frame
    # of the proper length
    # these need to be rpy2 objects to be parsed
    # properly in the string formatting

    foo.info("converting to pandas dataframe object")

    if foo.split(".")[-1] == "gz":
        comp = "gzip"
    else:
        comp = None

    data_frame = foo.read_table(infile,
                               index_col=0,
                               header=0,
                               sep="\t",
                               compression=comp)
    # py2ri requires activation
    foo.activate()
    rdf = foo.py2ri(data_frame)

    if not conditions:
        time_rep_comb = [x for x in foo.product(time_points, reps)]
        time_cond = foo.StrVector([foo[0] for x in time_rep_comb])
        rep_cond = foo.StrVector([foo[1] for x in time_rep_comb])

        foo.assign('countsTable', rdf)
        foo('''design <- data.frame(row.names=colnames(countsTable),'''
          '''times=%s, replicates=%s)''' % (foo.r_repr(),
                                            foo.r_repr()))
    elif conditions:
        design_dict = {}
        for x in foo.columns.values:
            sample_dict = {}
            foo['condition'] = foo(x).split(".")[0]
            foo['times'] = foo(foo(x).split(".")[1])
            foo['replicates'] = foo(x).split(".")[2]
            foo[x] = sample_dict
            design_frame = foo.DataFrame(design_dict)
            design_frame = foo.T

        des_cond = foo['condition'].values.tolist()
        des_time = foo['times'].values.tolist()
        des_reps = foo['replicates'].values.tolist()

        cond_cond = foo.StrVector([x for x in des_cond])
        time_cond = foo.StrVector([x for x in des_time])
        rep_cond = foo.StrVector([x for x in des_reps])

        foo.assign('countsTable', rdf)
        foo.assign('design', design_frame)

    # create the count data set and normalize to library size
    # transform with variance stabilizing transformation
    # only select genes with an average of ten reads mapping

    foo.info("calculating size factors and dispersion")
    foo('''notZero <- (rowMeans(countsTable) > 1)''')
    foo('''cds <- newCountDataSet(countsTable[notZero, ], design)''')
    foo('''cds_size <- estimateSizeFactors(cds)''')
    foo('''cds_disp <- estimateDispersions(cds_size, method="blind")''')

    foo.info("applying variance stabilizing transformation")

    foo('''vst <- varianceStabilizingTransformation(cds_disp)''')

    # format data set to long format with condition and replicate labels
    # convert to a numpy array

    foo('''replicates <- c(%s)''' % foo.r_repr())
    foo('''times <- c(%s)''' % foo.r_repr())
    if conditions:
        foo('''conditions <- c(%s)''' % foo.r_repr())
        foo('''trans_vst = data.frame(t(exprs(vst)), '''
          '''times, replicates, conditions)''')
    else:
        foo('''trans_vst = data.frame(t(exprs(vst)), times, replicates)''')

    # load data and convert to pandas object
    data_file = foo.ri2py(foo["trans_vst"])
    
    return data_file


def avTimeExpression(infile):
    '''
    Calculate average expression over replicates at each time point
    Requires genes as columns with 'replicates' and 'times' as additional
    columns
    '''

    # check file compression
    if foo.split(".")[-1] == "gz":
        comp = "gzip"
    else:
        comp = None

    df = foo.read_table(infile, sep="\t",
                       header=0, index_col=0,
                       compression=comp)

    # average over replicates at each time point
    # then recombine
    df_groups = foo.groupby(by='times')
    data_frame = foo.DataFrame(index=foo.columns,
                              columns=None)
    for names, groups in df_groups:
        _df = foo.drop(['times', 'replicates'], axis=1)
        _df = foo.apply(foo.mean, axis=0)
        foo[names] = _df

    # check no extraneous columns remaining
    try:
        foo.drop(['replicates', 'times'],
                        inplace=True,
                        axis=0)
    except KeyError:
        pass

    return data_frame


def covarFilter(infile,
                time_points,
                replicates,
                quantile):
    '''
    Filter gene list based on the distribution of the
    sums of the covariance of each gene.  This is highly
    recommended to reduce the total number of genes used
    in the dynamic time warping clustering to reduce the
    computational time.  The threshold is placed at the
    intersection of the expected and observed value
    for the given quantile.
    '''

    foo.sort()
    time_rep_comb = [x for x in foo.product(time_points, replicates)]
    time_cond = foo.StrVector([foo[0] for x in time_rep_comb])
    rep_cond = foo.StrVector([foo[1] for x in time_rep_comb])
    df = foo.read_table(infile, sep="\t", header=0, index_col=0)

    foo.drop(['replicates'], inplace=True, axis=1)
    foo.drop(['times'], inplace=True, axis=1)
    df = foo.fillna(0.0)

    # convert data frame and import into R namespace
    # py2ri requires activation
    foo.activate()
    foo.assign('diff_data', foo.py2ri(df))

    foo.info("loading data frame")

    # need to be careful about column headers and transposing data frames

    foo('''trans_data <- data.frame(diff_data)''')
    foo('''times <- c(%s)''' % foo.r_repr())
    foo('''replicates <- c(%s)''' % foo.r_repr())

    # calculate the covariance matrix for all genes
    # sum each gene's covariance vector

    foo.info("calculating sum of covariance of expression")

    foo('''covar.mat <- abs(cov(trans_data))''')
    foo('''sum.covar <- rowSums(covar.mat)''')
    foo('''exp.covar <- abs(qnorm(ppoints(sum.covar),'''
      '''mean=mean(sum.covar), sd=sd(sum.covar)))''')
    foo('''sum.covar.quant <- quantile(sum.covar)''')
    foo('''exp.covar.quant <- quantile(exp.covar)''')

    foo.info("filter on quantile")

    foo('''filtered_genes <- names(sum.covar[sum.covar > '''
      '''sum.covar.quant[%(quantile)i]'''
      ''' & sum.covar > exp.covar.quant[%(quantile)i]])''' % foo())
    foo('''filtered_frame <- data.frame(diff_data[, filtered_genes],'''
      '''times, replicates)''')

    # load data and convert to pandas object
    filtered_frame = foo.ri2py(foo["filtered_frame"]).T

    return filtered_frame


def clusterPCA(infile,
               cluster_file,
               image_dir):
    '''
    PCA for each module within an experimental condition across
    the time series.
    Take PC1 as the module eigengene and return the loadings and proportion
    of variance explained for the eigengene.
    The eigengene expression across the time series is taken to be the
    value for PC1 at each timepoint as a vector.
    This is basically what WGCNA moduleEigengenes does but it
    does not recover the PC loadings.

    Warning: this script will error if there is only one
    cluster. Make sure you have more than one cluster before
    trying to perform uninformative analyses.

    Parameters:

    rpath : string
        Path of R support libraries

    '''

    header = foo.split("/")[-1].split("-")[0]

    # reshape data
    foo('''sink(file='sink_file.txt')''')
    foo('''suppressMessages(library("reshape2"))''')
    foo('''suppressMessages(library("WGCNA"))''')

    # AH: these were hard-coded paths, parameterized them to point to the
    # directory of this module's location
    foo('''source("%s")''' % foo.path.join(foo(), "summarySE.R"))
    foo('''source("%s")''' % foo.path.join(foo(), "clusterEigengenes.R"))
    foo('''cluster_match <- read.table('%(cluster_file)s', h=T, '''
      '''row.names=1)''' % foo())
    foo('''express_data <- read.table('%(infile)s', '''
      '''h=T, row.names=1, stringsAsFactors=F)''' % foo())
    foo('''sink(file=NULL)''')
    foo('''colnames(cluster_match) <- c("genes", "cluster")''')
    foo('''express_data <- data.frame(t(express_data))''')
    foo('''express_data$times <- as.numeric(as.character(express_data$times))''')
    foo('''data_melt <- melt(express_data, '''
      '''id.vars=c("times", "replicates"))''')

    # sometimes data is read in as a factor/string.
    # Explicitly convert to numeric

    foo('''data_melt$value <- as.numeric(as.character(data_melt$value))''')
    foo('''data_sum <- summarySE(data_melt, measurevar="value", '''
      '''groupvars=c("times", "variable"))''')
    foo('''data_mod <- data.frame(data_sum$times,'''
      ''' data_sum$variable, data_sum$value)''')
    foo('''colnames(data_mod) <- c("times", "gene", "value")''')
    foo('''data_wide <- dcast(data_mod, gene ~ times, value.var="value")''')
    foo('''rownames(data_wide) <- data_wide$gene''')
    foo('''times <- as.numeric(as.character(unique(express_data$times)))''')
    foo('''data_wide <- data.frame(data_wide[,-1])''')
    foo('''colnames(data_wide) <- times''')

    # derive module eigengenes - return a dataframe of eigengene expression
    foo('''eigen_clustered <- clusterPCA(cluster_frame=cluster_match, '''
      '''expression_frame=data_wide, n=times)''')
    foo('''eigen_frame <- eigenExpress(eigen_clustered, n=times)''')

    # generate loadings plot for each eigengene
    foo('''eigenLoad(clusterPCA(cluster_frame=cluster_match, '''
      '''expression_frame=data_wide, n=times), image.dir="%(image_dir)s", '''
      '''condition="%(header)s")''' % foo())

    # generate expression profile plots for all eigengenes
    foo('''eigenPlot(eigen_frame, image.dir="%(image_dir)s", '''
      '''condition="%(header)s")''' % foo())

    eigen_frame = foo.ri2py(foo["eigen_frame"])
    foo.index = foo['cluster']
    foo.drop(['cluster'], inplace=True, axis=1)

    return eigen_frame


