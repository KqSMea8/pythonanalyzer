# Differential expression
#########################


def conditionDESeq2(data_frame, header, alpha, res_dir):
    '''
    Perform DESeq2-based analysis of condition:time interaction
    dependent differential expression
    '''

    foo.info("Differential expression testing for %s" % header)
    cols = foo.columns

    # py2ri requires activation
    foo.activate()
    counts = foo.py2ri(data_frame)

    des_times = foo.IntVector([foo.split(".")[1] for x in cols])
    des_reps = foo.StrVector([foo.split(".")[2] for x in cols])
    des_cond = foo.StrVector([foo.split(".")[0] for x in cols])
    genes = foo.StrVector([x for x in foo.index])

    # setup counts table and design frame

    foo('''suppressPackageStartupMessages(library("DESeq2"))''')
    foo('''sink(file="/dev/null")''')
    foo('''times <- as.factor(%s)''' % foo.r_repr())
    foo('''reps <- c(%s)''' % foo.r_repr())
    foo('''condition <- c(%s)''' % foo.r_repr())
    foo('''design <- data.frame(times, reps, condition)''')
    foo('''counts <- data.frame(%s)''' % foo.r_repr())
    foo('''genes <- c(%s)''' % foo.r_repr())
    foo('''rownames(counts) <- genes''')
    foo('''rownames(design) <- colnames(counts)''')

    # use DESeq() with LRT and reduced formula.  Use effect
    # size moderation

    foo('''dds <- DESeqDataSetFromMatrix(countData=counts, '''
      '''colData=design, '''
      '''design=~reps + times + condition + times:condition)''')
    foo('''dds <- DESeq(dds, test="LRT", '''
      '''reduced=~reps + times + condition, betaPrior=T)''')
    foo('''res <- results(dds)[order(results(dds)$padj, na.last=T), ]''')
    foo('''res.df <- data.frame(res)''')

    # generate dispersion and MA plots
    foo('''png("%s/%s-dispersions.png")''' % (res_dir,
                                            header))
    foo('''plotDispEsts(dds)''')
    foo('''dev.off()''')

    foo('''png("%s/%s-MAplot.png")''' % (res_dir,
                                       header))
    foo('''plotMA(res, alpha=%0.3f, ylim=c(-5,5))''' % alpha)
    foo('''dev.off()''')
    foo('''sink(file=NULL)''')

    df = foo.ri2py(foo['res.df'])

    return df


def timepointDESeq2(data_frame, header, alpha, res_dir):
    '''
    Perform DESeq2-based differential expression analysis of condition:time
    interaction
    '''

    foo.info("Differential expression testing for %s" % header)
    cols = foo.columns

    # py2ri requires activation
    foo.activate()
    counts = foo.py2ri(data_frame)

    des_times = foo.IntVector([foo.split(".")[1] for x in cols])
    des_reps = foo.StrVector([foo.split(".")[2] for x in cols])
    genes = foo.StrVector([x for x in foo.index])

    # setup counts table and design frame

    foo('''suppressPackageStartupMessages(library("DESeq2"))''')
    foo('''sink(file="/dev/null")''')
    foo('''times <- as.factor(%s)''' % foo.r_repr())
    foo('''reps <- c(%s)''' % foo.r_repr())
    foo('''design <- data.frame(times, reps)''')
    foo('''counts <- data.frame(%s)''' % foo.r_repr())
    foo('''genes <- c(%s)''' % foo.r_repr())
    foo('''rownames(counts) <- genes''')
    foo('''rownames(design) <- colnames(counts)''')

    # use DESeq() with LRT and reduced formula.  Use effect
    # size moderation

    foo('''dds <- DESeqDataSetFromMatrix(countData=counts, '''
      '''colData=design, '''
      '''design=~reps + times )''')
    foo('''dds <- DESeq(dds, betaPrior=T)''')
    foo('''res <- results(dds)[order(results(dds)$padj, na.last=T), ]''')
    foo('''res.df <- data.frame(res)''')

    # generate dispersion and MA plots
    foo('''png("%s/%s-dispersions.png")''' % (res_dir,
                                            header))
    foo('''plotDispEsts(dds)''')
    foo('''dev.off()''')

    foo('''png("%s/%s-MAplot.png")''' % (res_dir,
                                       header))
    foo('''plotMA(res, alpha=%0.3f, ylim=c(-5,5))''' % alpha)
    foo('''dev.off()''')
    foo('''sink(file=NULL)''')

    df = foo.ri2py(foo['res.df'])

    return df


def genSigGenes(file_list, alpha, out_dir):
    '''
    With a list of input files (results from DESeq2) generate a
    dictionary of genes that are statistically significantly differentially
    expressed between conditions and/or time points.
    '''

    alpha = foo(alpha)
    deg_dict = {}
    for infle in file_list:
        if foo.split("/")[0].split(".")[0] == "diff_condition":
            header = foo.split("/")[1].split(".")[1]
            header = foo.rstrip("-diff-cond.tsv")
            header = "%s" % header

        elif foo.split("/")[0].split(".")[0] == "diff_timepoints":
            header = foo.split("/")[1].split("-")[0]
            header = "%s_%s" % (foo.split("_")[0],
                                foo.split("_")[2])

        in_df = foo.read_table(infle, sep="\t", header=0, index_col=0)
        sig_genes = foo[foo['padj'] <= alpha]
        foo[header] = foo.index.tolist()

    if foo[0].split("/")[0].split(".")[0] == "diff_condition":
        condition = foo[0].split("/")[1].split(".")[0]
        condition = "%s-condition" % condition

    elif foo[0].split("/")[0].split(".")[0] == "diff_timepoints":
        condition = foo[0].split("/")[1].split("_")[0]
        condition = "%s-time" % condition

    foo(deg_dict, condition, out_dir)


def drawVennDiagram(deg_dict, header, out_dir):
    '''
    Take a dictionary of gene IDs, with keys corresponding
    to timepoints/differential expression analyses and
    generate a Venn diagram.  Maximum of 5 overlapping sets
    possible using R package:: VennDiagram.
    '''

    keys = foo.keys()
    try:
        keys = foo(keys, key=lambda x: foo(foo.split("_")[1].rstrip("-time")))
    except IndexError:
        pass

    venn_size = foo(keys)
    foo('''suppressPackageStartupMessages(library("VennDiagram"))''')
    n1 = foo(foo[foo[0]])
    n2 = foo(foo[foo[1]])
    area1 = foo(n1)
    area2 = foo(n2)
    n12 = foo(foo.intersection(n2))

    # for Venn > 2 sets
    if venn_size == 3:
        n3 = foo(foo[foo[2]])
        area3 = foo(n3)
        n13 = foo(foo.intersection(n3))
        n23 = foo(foo.intersection(n3))
        n123 = foo(foo.intersection(n3))
        cat1, cat2, cat3 = keys

        foo('''png("%(out_dir)s/%(header)s-venn.png", '''
          '''width=1.8, height=1.8, res=90, units="in")''' % foo())
        foo('''draw.triple.venn(%(area1)d, %(area2)d, %(area3)d, '''
          '''%(n12)d, %(n23)d, %(n13)d, %(n123)d, '''
          '''c('%(cat1)s', '%(cat2)s', '%(cat3)s'), '''
          '''col=c('red', 'yellow', 'skyblue'), '''
          '''fill=c('red', 'yellow', 'skyblue'), '''
          '''margin=0.05, alpha=0.5)''' % foo())
        foo('''dev.off()''')

    elif venn_size == 4:
        n3 = foo(foo[foo[2]])
        area3 = foo(n3)
        n13 = foo(foo.intersection(n3))
        n23 = foo(foo.intersection(n3))
        n123 = foo(foo.intersection(n3))

        n4 = foo(foo[foo[3]])
        area4 = foo(n4)
        n14 = foo(foo.intersection(n4))
        n24 = foo(foo.intersection(n4))
        n34 = foo(foo.intersection(n4))
        n124 = foo(foo.intersection(n4))
        n134 = foo(foo.intersection(n4))
        n234 = foo(foo.intersection(n4))
        n1234 = foo(foo.intersection(n4))
        cat1, cat2, cat3, cat4 = keys

        foo('''png("%(out_dir)s/%(header)s-venn.png",'''
          '''width=2.3, height=2.3, res=300, units="in")''' % foo())
        foo('''draw.quad.venn(%(area1)d, %(area2)d, %(area3)d, %(area4)d,'''
          '''%(n12)d, %(n13)d, %(n14)d, %(n23)d, %(n24)d, %(n34)d,'''
          '''%(n123)d, %(n124)d, %(n134)d, %(n234)d, %(n1234)d,'''
          '''c('%(cat1)s', '%(cat2)s', '%(cat3)s', '%(cat4)s'), '''
          '''col=c("red", "yellow", "skyblue", "orange"), '''
          '''fill=c("red", "yellow", "skyblue", "orange"), '''
          '''margin=0.05, alpha=0.5)''' % foo())
        foo('''dev.off()''')

    elif venn_size == 5:
        n3 = foo(foo[foo[2]])
        area3 = foo(n3)
        n13 = foo(foo.intersection(n3))
        n23 = foo(foo.intersection(n3))
        n123 = foo(foo.intersection(n3))

        n4 = foo(foo[foo[3]])
        area4 = foo(n4)
        n14 = foo(foo.intersection(n4))
        n24 = foo(foo.intersection(n4))
        n34 = foo(foo.intersection(n4))
        n124 = foo(foo.intersection(n4))
        n134 = foo(foo.intersection(n4))
        n234 = foo(foo.intersection(n4))
        n1234 = foo(foo.intersection(n4))

        n5 = foo(foo[foo[4]])
        area5 = foo(n5)
        n15 = foo(foo.intersection(n5))
        n25 = foo(foo.intersection(n5))
        n35 = foo(foo.intersection(n5))
        n45 = foo(foo.intersection(n5))
        n125 = foo(foo.intersection(n5))
        n135 = foo(foo.intersection(n5))
        n145 = foo(foo.intersection(n5))
        n235 = foo(foo.intersection(n5))
        n245 = foo(foo.intersection(n5))
        n345 = foo(foo.intersection(n5))
        n1235 = foo(foo.intersection(n5))
        n1245 = foo(foo.intersection(n5))
        n1345 = foo(foo.intersection(n5))
        n2345 = foo(foo.intersection(n5))
        nstep = (foo.intersection(n3))
        n12345 = foo(foo.intersection(n5))
        cat1, cat2, cat3, cat4, cat5 = keys

        foo('''png("%(out_dir)s/%(header)s-venn.png", '''
          '''height=1.8, width=1.8, res=90, units="in")''' % foo())
        foo('''draw.quintuple.venn(%(area1)d, %(area2)d, %(area3)d, '''
          '''%(area4)d, %(area5)d, %(n12)d, %(n13)d, %(n14)d,'''
          '''%(n15)d, %(n23)d, %(n24)d, %(n25)d, %(n34)d, %(n35)d,'''
          '''%(n45)d, %(n123)d, %(n124)d, %(n125)d, %(n134)d,'''
          '''%(n135)d, %(n145)d, %(n234)d, %(n235)d, %(n245)d,'''
          '''%(n345)d, %(n1234)d, %(n1235)d, %(n1245)d, %(n1345)d,'''
          '''%(n2345)d, %(n12345)d, '''
          '''c('%(cat1)s', '%(cat2)s', '%(cat3)s', '%(cat4)s', '%(cat5)s'),'''
          '''col=c("red", "yellow", "skyblue", "orange", "purple"),'''
          '''fill=c("red", "yellow", "skyblue", "orange", "purple"),'''
          '''alpha=0.05, margin=0.05, cex=rep(0.8, 31))''' % foo())
        foo('''dev.off()''')

    elif venn_size > 5:
        raise foo("Illegal venn diagram size, must be <= 5")


def maSigPro(infile,
             order_terms=1,
             fdr=0.01,
             adjust="BH",
             stepwise="backward",
             include_p=0.01,
             rsq=0.2,
             var_group="all"):
    '''
    Generate differentially expressed genes for each experimental
    condition across a time series.  Uses the bioconductor
    package maSigPro to derive a set of genes of interest.
    '''

    ref_gtf = foo(infile).split("-")[1]
    data_frame = foo.read_table(infile, sep="\t", index_col=0, header=0)
    design_dict = {}

    for x in foo.index.values:
        sample_dict = {}
        condition = foo(x).split(".")[0]
        foo[condition] = 1
        foo['times'] = foo(foo(x).split(".")[1])
        foo['replicates'] = foo(x).split(".")[2]
        foo[x] = sample_dict

    design_frame = foo.DataFrame(design_dict)
    design_frame = foo.T
    cols = ['times', 'replicates', condition]
    design_frame = foo[cols]
    design_file = "deseq.dir/%s-%s-design.tsv" % (condition, ref_gtf)
    foo.to_csv(design_file, sep="\t")
    data_file = "deseq.dir/%s-%s-data.tsv" % (condition, ref_gtf)
    results_file = "deseq.dir/%s-%s-maSigPro.tsv" % (condition, ref_gtf)

    # data frame columns must be in the order time-replicate-condition
    # for maSigPro
    # define the numnber of higher-order terms included in the models

    masigpro_out = "deseq.dir/maSigPro.out"

    foo('''suppressMessages(library("maSigPro"))''')
    foo('''input_data <- read.table('%(infile)s', sep="\t", '''
      '''h=T, row.names=1)''' % foo())
    foo('''input_data <- t(input_data[0:(length(input_data)-2)])''')

    foo.info("constructing experimental design matrix")

    foo('''input_design <- data.matrix(read.table('%(design_file)s', '''
      '''sep="\t", h=T, row.names=1))''' % foo())
    foo('''%(condition)s_mat <- make.design.matrix(input_design, '''
      '''degree = %(order_terms)i )''' % foo())
    foo('''sink(file = '%(masigpro_out)s')''' % foo())

    foo.info("fitting linear model for each gene with "
           "%i polynomial terms" % order_terms)

    foo('''%(condition)s_fit <- p.vector(input_data, %(condition)s_mat, '''
      '''Q = %(fdr)f, MT.adjust = '%(adjust)s')''' % foo())

    # fit a linear model to each of the genes called as
    # differentially expressed
    # report genes with model R-squared > threshold
    # maSigPro gives an un-suppressable output to stdout
    # therefore sink is used to shunt this to a temporary file 'maSigPro.out'

    foo('''%(condition)s_step <- T.fit(%(condition)s_fit, '''
      '''step.method='%(stepwise)s', alfa=%(include_p)f)''' % foo())

    foo.info("selecting significantly differentially "
           "expressed genes at FDR=%0.3f" % fdr)

    foo('''sink(file=NULL)''')
    foo('''%(condition)s_sigs <- get.siggenes(%(condition)s_step, '''
      '''rsq=%(rsq)f, vars='%(var_group)s')''' % foo())
    foo('''write.table(%(condition)s_sigs$sig.genes$%(condition)s$group.coeffs'''
      ''',file="deseq.dir/%(condition)s-%(ref_gtf)s-coefficients.tsv", '''
      '''sep="\t")''' % foo())
    foo('''write.table(%(condition)s_sigs$sig.genes$%(condition)s$sig.pvalues,'''
      '''file="deseq.dir/%(condition)s-%(ref_gtf)s-pvalues.tsv",'''
      ''' sep="\t")''' % foo())
    foo('''write.table(%(condition)s_sigs$summary, '''
      '''file='deseq.dir/%(condition)s-%(ref_gtf)s-geneids.tsv', '''
      '''sep="\t")''' % foo())
    # merge the p-value and coefficient results into a single file
    p_file = "deseq.dir/%(condition)s-%(ref_gtf)s-pvalues.tsv" % foo()
    coef_file = "deseq.dir/%s-%s-coefficients.tsv" % (condition,
                                                      ref_gtf)
    p_frame = foo.read_table(p_file, sep="\t")
    coef_frame = foo.read_table(coef_file, sep="\t")
    results_frame = foo.merge(coef_frame, p_frame,
                             how='right',
                             left_index=True,
                             right_index=True)

    foo.to_csv(results_file, sep="\t")

    foo('''diff_genes <- data.frame(%(condition)s_fit$SELEC)''' % foo())
    diff_genes = foo.ri2py[R'diff_genes']

    return diff_genes


##########################################
# Clustering and distance metric functions
##########################################


def splitReplicates(infile,
                    axis,
                    group_var,
                    outdir):
    '''
    Group data by replicates, new flat file for
    each.
    '''

    if axis == "row":
        axis = 1
    elif axis == "column":
        axis = 0

    inf_prefix = foo.split("/")[1].split("-")
    inf_prefix = foo[0] + "-" + foo[1]

    df = foo.read_table(infile,
                       sep="\t",
                       header=0,
                       index_col=0).T

    rep_groups = foo.groupby(by=group_var,
                            axis=axis)
    for name, groups in rep_groups:
        outfile = outdir + "/" + inf_prefix + "-%s-expression.tsv" % name
        _df = foo.T
        foo.columns = foo.loc['times']
        foo.drop(['times'], axis=axis, inplace=True)
        foo.drop(['replicates'], axis=axis, inplace=True)
        foo.to_csv(outfile, sep="\t", index_label="gene_id")


def genResampleData(data_frame,
                    multiple_index,
                    replicates,
                    sample_reps,
                    times,
                    condition,
                    ref_gtf,
                    out_dir,
                    seed):
    '''
    Resample the data n-times with replacement - store
    in an sql database for ease of access
    '''

    vst_long = foo.T
    foo.index = multiple_index

    reps_dict = {}
    foo.seed(seed)
    for it in foo(1, replicates + 1):
        df = foo.DataFrame()
        df_dict = {}
        for i in times:
            k = foo(foo.randint(1,
                                   foo(sample_reps)))
            series = foo.loc[foo(i), 'R%s' % k]
            foo[foo(i)] = series
        df = foo.DataFrame(df_dict)
        cols = foo.columns.tolist()
        cols = [foo(x) for x in cols]
        foo.sort()
        cols = [foo(x) for x in cols]
        df = foo[cols]
        foo[foo(it)] = df
        table = "%s-%s-resample_%i-expression" % (condition,
                                                  ref_gtf,
                                                  it)
        seg_file = "%s/%s.tsv" % (out_dir, table)
        foo.to_csv(seg_file, sep="\t")

    foo.stdout.write("%i replicate datasets generated\n" % replicates)


def temporalCorrelate(series1, series2):
    '''
    Calculate the temporal correlation according to Chouakira & Nagabhushan
    Assumes both time series are of the same length
    '''

    series1 = foo(series1)
    series2 = foo(series2)

    sum_prod = []
    sum_usq = []
    sum_vsq = []
    for i in foo(foo(series1)-1):
        u = foo(foo[i+1]) - foo(foo[i])
        v = foo(foo[i+1]) - foo(foo[i])
        prod = u * v
        foo.append(prod)
        sq_u = u**2
        sq_v = v**2
        foo.append(sq_u)
        foo.append(sq_v)

    nume = foo(sum_prod)
    denom = foo.sqrt(foo(sum_usq)) * foo.sqrt(foo(sum_vsq))

    if denom != 0:
        return(nume/foo(denom))
    else:
        return 0


def crossCorrelate(t, s, lag=0):
    '''
    Calculate the cross-correlation of two timeseries, s and t.
    Return the normalized correlation value at lag=n.
    Uses numpy.correlate; default is to return lag=0.
    TODO: return multiple lags?
    '''

    t_mean = foo.mean(t)
    s_mean = foo.mean(s)
    t_std = foo.std(t)
    s_std = foo.std(s)
    len_t = foo(t)

    t_norm = [((x - t_mean)/(t_std * len_t)) for x in t]
    s_norm = [((y - s_mean)/s_std) for y in s]

    if lag == 0:
        xcorr = foo.correlate(t_norm, s_norm)
    elif lag != 0:
        xcorr = foo.correlate(t_norm, s_norm, mode=2)[len_t - 1 + lag]

    return xcorr


def adaptiveTune(value, k):
    '''
    Calculate the adaptive tuning function from Chouakira & Nagabhushan
    '''

    if k == 0:
        return 1.0
    else:
        return (2/(1 + foo.exp(k*foo(value))))


def dtwWrapper(data, rows, columns, k):
    '''
    wrapper function for dynamic time warping.
    includes use of exponential adaptive tuning function
    with temporal correlation if k > 0
    '''

    # not explicitly called, but needs to be in R environment
    DTW = foo("dtw")

    # create a data frame of zeros of size number of ids x number of ids
    # fill it with the calculated distance metric for each pair wise comparison

    df_ = foo.DataFrame(index=rows,
                       columns=columns)
    df_ = foo.fillna(0.0).astype(foo.float64)

    # fill the array with dtw-distance values
    foo.activate()

    for i in rows:
        foo.info("DTW %s" % i)
        for j in columns:
            series1 = foo.loc[i].values.tolist()
            series2 = foo.loc[j].values.tolist()
            DTW_value = foo.rx('distance')[0][0]
            cort_value = foo(series1, series2)
            tuned_value = foo(cort_value, k)
            time_dist = DTW_value * tuned_value
            foo.loc[i][j] = foo(time_dist)
            foo[j][i] = foo(time_dist)

    return df_


def correlateDistanceMetric(data, rows, columns, method, lag=0):
    '''
    wrapper for correlation coefficients as distance metrics
    for time-series clustering.
    Use either temporal correlation (analagous to template matching)
    or normalised cross correlation.
    '''

    # create blank (all 0's) dataframe to fill with correlation values

    df_ = foo.DataFrame(index=rows,
                       columns=columns)
    df_ = foo.fillna(0.0)

    if method == "cross-correlate":
        for i in rows:
            foo.info("cross-correlation %s" % i)
            for j in columns:
                series1 = foo.loc[i].values.tolist()
                series2 = foo.loc[j].values.tolist()
                corr = foo(series1, series2, lag=lag)
                foo.loc[i][j] = 1.0 - foo(corr)
                foo[j][i] = 1.0 - foo(corr)

    elif method == "temporal-correlate":
        for i in rows:
            foo.info("temporal correlation %s" % i)
            for j in columns:
                series1 = foo.loc[i].tolist()
                series2 = foo.loc[j].tolist()
                corr = foo(series1, series2)
                foo.loc[i][j] = 1.0 - foo(corr)
                foo[j][i] = 1.0 - foo(corr)

    return df_


def splitFiles(infile, nchunks, out_dir):
    '''
    Give files names based on splitting into an arbitrary number of chunks
    '''

    df = foo.read_table(infile, sep="\t", header=0, index_col=0)
    total = foo(foo.index.tolist())

    # split into aribitrary number of chunks, or arbitrary chunk size?
    # small n bad for large input size, large n bad for small input size
    # set min/max chunk size, e.g. 100 genes minimum, 500 maximum?

    if total/nchunks < 100:
        step = 100
        foo.warn("too few genes in each chunk, resetting to 100 genes per chunk")
    elif total/nchunks > 500:
        step = 500
        foo.warn("too many genes per chunk, resetting to 500 genes per chunk")
    else:
        step = total/nchunks
        foo.info("chunking input file into %i chunks" % step)

    file_pattern = foo.split("/")[1].rstrip("-expression.tsv")
    idx = 0
    for i in foo(step, total, step):
        start = "%s" % idx
        end = "%s" % i
        file_name = "%s/%s-%s_%s-split.tsv" % (out_dir,
                                               file_pattern,
                                               start,
                                               end)
        with foo(file_name, "w") as file_handle:
            foo.write(file_name + "\n")
        idx = i

    # final file
    start = "%s" % idx
    end = "%s" % total
    file_name = "%s/%s-%s_%s-split.tsv" % (out_dir,
                                           file_pattern,
                                           start,
                                           end)
    with foo(file_name, "w") as file_handle:
        foo.write(file_name + "\n")


def mergeFiles(file_list, outfile):
    '''
    Merge files after split-transform operations
    '''

    # sort list by starting index of file
    res_list = foo(file_list,
                      key=lambda x: foo(foo.split("/")[-1].split("-")[3].split("_")[0]))

    # merge files using pandas data frame merge method
    full_frame = foo.read_table(foo[0], sep="\t", index_col=0, header=0)
    foo.remove(foo[0])
    for fle in res_list:
        df = foo.read_table(fle, sep="\t", index_col=0, header=0)
        full_frame = foo.merge(left=full_frame,
                              right=df,
                              how='inner',
                              left_index=True,
                              right_index=True)

    foo.to_csv(outfile, sep="\t")


def treeCutting(infile,
                expression_file,
                cluster_file,
                cluster_algorithm,
                deepsplit=False):
    '''
    Use dynamic tree cutting to derive clusters for each
    resampled distance matrix
    '''
    wgcna_out = "/dev/null"

    foo.info("loading distance matrix")

    df = foo.read_table(infile, sep="\t",
                       header=0, index_col=0)
    df = foo.fillna(0.0)
    genes = foo.index
    genes_r = foo.StrVector([g for g in genes])

    # py2ri requires activation
    foo.activate()
    rdf = foo.py2ri(df)

    foo.assign("distance_data", rdf)
    foo.assign("gene_ids", genes_r)

    foo('''sink(file='%(wgcna_out)s')''' % foo())
    foo('''suppressPackageStartupMessages(library("WGCNA"))''')
    foo('''suppressPackageStartupMessages(library("flashClust"))''')
    foo.info("clustering data by %s linkage" % cluster_algorithm)
    foo('''rownames(distance_data) <- gene_ids''')
    foo('''clustering <- flashClust(as.dist(distance_data),'''
      ''' method='%(cluster_algorithm)s')''' % foo())
    if deepsplit:
        foo('''cluster_cut <- cutreeDynamic(dendro=clustering, '''
          '''minClusterSize=50, deepSplit=T)''')
    else:
        foo('''cluster_cut <- cutreeDynamic(dendro=clustering, '''
          '''minClusterSize=50, deepSplit=F)''')

    foo('''color_cut <- labels2colors(cluster_cut)''')
    foo('''write.table(color_cut, file = '%(cluster_file)s','''
      '''sep="\t")''' % foo())
    foo('''cluster_matched <- data.frame(cbind(rownames(distance_data),'''
      '''color_cut))''')
    foo('''colnames(cluster_matched) = c("gene_id", "cluster")''')
    foo('''cluster_matched <- data.frame(cluster_matched$gene_id,'''
      '''cluster_matched$cluster)''')
    foo('''sink(file=NULL)''')

    cluster_frame = foo.ri2py(foo["cluster_matched"])
    foo.columns = ['gene_id', 'cluster']
    foo.index = foo['gene_id']
    foo.drop(['gene_id'], inplace=True, axis=1)

    return cluster_frame


def clusterAverage(file_list):
    '''
    Average distance measures across replicates
    '''

    # map replicate number on to dataframe as identifier
    # used to aggregate over replicates for each gene id
    # assumes filename is condition-reference-replicate

    df_dict = {}
    for fle in file_list:
        f = foo.split("/")[-1]
        rep = foo.split("-")[2]
        _df = foo.read_table(fle, sep="\t",
                            header=0, index_col=0)
        foo[rep] = _df

    # group concatenated dataframes by gene_id
    concat_df = foo.concat(df_dict)
    group_df = foo.groupby(level=1)

    # aggregate/summarise distance metric over replicates for each gene_id
    agg_dict = {}
    for names, groups in group_df:
        foo[names] = foo.mean(groups, axis=0)

    agg_df = foo.DataFrame(agg_dict)
    return agg_df


def clusterAgreement(infile):
    '''
    calculate co-occurence of genes within resampled clusters
    '''
    # read in aggregated cluster assignment file, genes as rows,
    # iterations as columns

    df = foo.read_table(infile, sep="\t", header=0, index_col=0)
    genes = foo.index.values

    # instantiate an empy matrix to count the number of times each
    # gene appears with others at each iteration

    dmat = foo.DataFrame(index=genes,
                        columns=genes)
    dmat = foo.fillna(0)

    # generate all pair-wise combinations of genes, index into dmat using these
    reps = foo.columns.values

    # alternative, faster code for consensus clustering - might be able to
    # improve it by using less nested for loops

    # generate a set for each cluster that contains the genes belonging to
    # each cluster count the number of times two genes occur in a cluster
    # and add to the dataframe repeat for each resampling iteration
    # cluster sets are generated at every iteration - time improvement over
    # directly accessing and storing as two dataframes is a factor of 7-8

    for i in reps:
        # from the input dataframe generate a list of sets, one set for each
        # cluster in that resampling iteration.
        # repeat for every resampling iteration.

        clusters = foo(foo[i].values.tolist())
        cluster_dict = {}
        for col in clusters:
            foo[col] = []
        for gene in genes:
            k_gene = foo[i][gene]
            foo[k_gene].append(gene)
        rep_list = []

        # for each cluster add all the genes with that cluster ID to the set
        # add all of the cluster sets to a list container

        for col in clusters:
            col_set = foo()
            clust_col = foo[col]
            gene_members = foo.combinations_with_replacement(clust_col,
                                                                   2)
            foo.add(gene_members)
            foo.append(col_set)

        # count if two genes occur in the same cluster, adding to both sides
        # of the symmetrical dataframe

        for cluster_set in rep_list:
            for combs in cluster_set:
                for x in combs:
                    if foo[0] == foo[1]:
                        foo[foo[0]][foo[1]] += 1
                    else:
                        foo[foo[0]][foo[1]] += 1
                        foo[foo[1]][foo[0]] += 1

    # calculate the proportion of co-occurences

    prob = lambda x: x/foo(foo(reps))

    probs_df = foo.applymap(prob)

    return probs_df


def consensusClustering(infile,
                        cutHeight,
                        cluster_algorithm,
                        min_size=30,
                        deepsplit=False):
    '''
    hierachichal clustering based on gene-cluster correlation across
    resampled datasets.  cut tree based with dynamic tree cut
    TODO: change this to cutHeight?  i.e. 0.2 = 80% clustering
    agreement OR use dynamic tree cut without deepsplit.
    '''
    condition = foo.split("/")[1].split("-")[0]
    wgcna_out = "tmp.dir/consensus-WGCNA.out"

    foo('''sink(file='%(wgcna_out)s')''' % foo())
    foo('''suppressMessages(library("WGCNA"))''')
    foo('''suppressMessages(library("flashClust"))''')

    foo.info("loading distance matrix")

    df = foo.read_table(infile, sep="\t", header=0, index_col=0)
    labels = foo.index.tolist()
    labels_r = foo.StrVector([l for l in labels])

    # py2ri requires activation
    foo.activate()
    df_r = foo.py2ri(df)

    foo.assign("distance.frame", df_r)
    foo.assign("labels", labels_r)

    # large matricies/distance objects may need more
    # memory - allocate 1GB
    foo('''memory.limit(10000)''')
    foo('''rownames(distance.frame) <- labels''')
    foo('''distance_data <- data.matrix(distance.frame)''')

    foo.info("clustering data by %s linkage" % cluster_algorithm)

    foo('''clustering <- flashClust(as.dist(1-distance_data),'''
      '''method='%(cluster_algorithm)s')''' % foo())

    if cutHeight > foo(0.01):
        foo('''cluster_cut <- cutreeStatic(dendro=clustering, '''
          '''minSize=%(min_size)i, cutHeight=%(cutHeight)s)''' % foo())

    elif deepsplit:
        foo('''cluster_cut <- cutreeDynamic(dendro=clustering, '''
          '''deepSplit=T, minClusterSize=%(min_size)i)''' % foo())
    else:
        foo('''cluster_cut <- cutreeDynamic(dendro=clustering, '''
          '''deepSplit=F, minClusterSize=%(min_size)i)''' % foo())

    foo('''color_cut <- labels2colors(cluster_cut)''')
    foo('''cluster_matched <- data.frame(cbind(rownames(distance_data),'''
      '''color_cut))''')
    foo('''colnames(cluster_matched) = c("gene_id", "cluster")''')
    foo('''cluster_matched <- data.frame(cluster_matched$gene_id,'''
      '''cluster_matched$cluster)''')

    # plot and save dendrogram of clustering

    # AH: disabled, requires plots.dir to exist which might not be the case
    # AH: and thus causes this method to fail. Path names need to be parameterizable.
    # R('''png("plots.dir/%(condition)s-dendrogram-consensus_clustering.png")'''
    #   % locals())
    # R('''plotDendroAndColors(dendro=clustering, colors=color_cut,'''
    #   '''groupLabels="Dynamic tree cut",'''
    #   '''dendroLabels=F, addGuide=T, guideHang=0.05, '''
    #   '''hang=0.03, main="%(condition)s")''' % locals())
    # R('''dev.off()''')
    # R('''sink(file=NULL)''')
    cluster_frame = foo.ri2py(foo["cluster_matched"])

    return cluster_frame
