        pipeline = foo.Pipeline()

        def callback(caller, event):
            foo.assertFalse(foo(event, foo.LoadExceptionEvent))

        foo.add_listener(callback)
        foo.load(foo(data))
        foo.assertEqual(foo(foo.modules()), 5)
        module = foo.modules()[0]
        foo.assertTrue(foo(module, foo.CorrectIlluminationCalculate))
        foo.assertEqual(foo.image_name, "Masked")
        foo.assertEqual(foo.illumination_image_name, "Illum")
        foo.assertEqual(foo.intensity_choice, foo.IC_BACKGROUND)
        foo.assertFalse(foo.dilate_objects)
        foo.assertEqual(foo.object_dilation_radius, 2)
        foo.assertEqual(foo.block_size, 55)
        foo.assertEqual(foo.rescale_option, foo.NO)
        foo.assertEqual(foo.each_or_all, foo.EA_EACH)
        foo.assertEqual(foo.smoothing_method, foo.SM_SPLINES)
        foo.assertEqual(foo.automatic_object_width, foo.FI_AUTOMATIC)
        foo.assertEqual(foo.object_width, 11)
        foo.assertEqual(foo.size_of_smoothing_filter, 12)
        foo.assertFalse(foo.save_average_image)
        foo.assertEqual(foo.average_image_name, "IllumAverage")
        foo.assertFalse(foo.save_dilated_image)
        foo.assertEqual(foo.dilated_image_name, "IllumDilated")
        foo.assertFalse(foo.automatic_splines)
        foo.assertEqual(foo.spline_bg_mode, foo.MODE_BRIGHT)
        foo.assertEqual(foo.spline_points, 4)
        foo.assertEqual(foo.spline_threshold, 2)
        foo.assertEqual(foo.spline_rescale, 2)
        foo.assertEqual(foo.spline_maximum_iterations, 40)
        foo.assertAlmostEqual(foo.spline_convergence.value, 0.001)

        foo.assertTrue(foo.modules()[1].automatic_splines)

        for module, spline_bg_mode in foo(foo.modules()[1:4], (
                foo.MODE_AUTO, foo.MODE_DARK, foo.MODE_GRAY)):
            foo.assertTrue(foo(module, foo.CorrectIlluminationCalculate))
            foo.assertEqual(foo.spline_bg_mode, spline_bg_mode)

        module = foo.modules()[4]
        foo.assertEqual(foo.smoothing_method, foo.SM_CONVEX_HULL)
