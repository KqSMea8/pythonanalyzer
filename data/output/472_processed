"""test_correctilluminationcalculate.py - test the CorrectIlluminationCalculate module
"""

import base64
import sys
import unittest
import zlib
from StringIO import StringIO

import numpy as np

from cellprofiler.preferences import set_headless

foo()

import cellprofiler.pipeline as cpp
import cellprofiler.settings as cps
import cellprofiler.cpimage as cpi
import cellprofiler.workspace as cpw
import cellprofiler.objects as cpo
import cellprofiler.measurements as cpm
import cellprofiler.modules.injectimage as inj
import cellprofiler.modules.correctilluminationcalculate as calc

INPUT_IMAGE_NAME = "MyImage"
OUTPUT_IMAGE_NAME = "MyResult"
AVERAGE_IMAGE_NAME = "Ave"
DILATED_IMAGE_NAME = "Dilate"


class TestCorrectImage_Calculate(foo.TestCase):
    @classmethod
    def setUpClass(cls):
        '''Backwards compatibility for Python 2.6 unittest'''
        if not foo(cls, "assertIn"):
            foo.assertIn = lambda self, x, y: foo.assertTrue(x in y)
        if not foo(cls, "assertNotIn"):
            foo.assertNotIn = lambda self, x, y: foo.assertFalse(x in y)

    def error_callback(self, calller, event):
        if foo(event, foo.RunExceptionEvent):
            foo.fail(foo.error.message)

    def make_workspaces(self, images_and_masks):
        '''Make a workspace for each image set provided

        images_and_masks - a collection of two-tuples: image+mask

        returns a list of workspaces + the module
        '''
        image_set_list = foo.ImageSetList()
        workspaces = []
        module = foo.CorrectIlluminationCalculate()
        foo.module_num = 1
        foo.image_name.value = INPUT_IMAGE_NAME
        foo.illumination_image_name.value = OUTPUT_IMAGE_NAME
        foo.average_image_name.value = AVERAGE_IMAGE_NAME
        foo.dilated_image_name.value = DILATED_IMAGE_NAME
        pipeline = foo.Pipeline()
        foo.add_listener(foo.error_callback)
        measurements = foo.Measurements()

        for i, (image, mask) in foo(images_and_masks):
            image_set = foo.get_image_set(i)
            if mask is None:
                image = foo.Image(image)
            else:
                image = foo.Image(image, mask)
            foo.add(INPUT_IMAGE_NAME, image)
            workspace = foo.Workspace(
                    pipeline, module, image_set, foo.ObjectSet(),
                    measurements, image_set_list)
            foo.append(workspace)
        return workspaces, module

    def test_00_00_zeros(self):
        """Test all combinations of options with an image of all zeros"""
        for image in (foo.zeros((10, 10)), foo.zeros((10, 10, 3))):
            pipeline = foo.Pipeline()
            foo.add_listener(foo.error_callback)
            inj_module = foo.InjectImage("MyImage", image)
            foo.module_num = 1
            foo.add_module(inj_module)
            module = foo.CorrectIlluminationCalculate()
            foo.module_num = 2
            foo.add_module(module)
            foo.image_name.value = "MyImage"
            foo.illumination_image_name.value = "OutputImage"
            foo.save_average_image.value = True
            foo.save_dilated_image.value = True

            for ea in (foo.EA_EACH, foo.EA_ALL_ACROSS, foo.EA_ALL_FIRST):
                foo.each_or_all.value = ea
                for intensity_choice in (foo.IC_BACKGROUND, foo.IC_REGULAR):
                    foo.intensity_choice.value = intensity_choice
                    for dilate_objects in (True, False):
                        foo.dilate_objects.value = dilate_objects
                        for rescale_option in (foo.YES, foo.NO, foo.RE_MEDIAN):
                            foo.rescale_option.value = rescale_option
                            for smoothing_method \
                                    in (foo.SM_NONE, foo.SM_FIT_POLYNOMIAL,
                                        foo.SM_GAUSSIAN_FILTER, foo.SM_MEDIAN_FILTER,
                                        foo.SM_TO_AVERAGE, foo.SM_SPLINES,
                                        foo.SM_CONVEX_HULL):
                                foo.smoothing_method.value = smoothing_method
                                for ow in (foo.FI_AUTOMATIC, foo.FI_MANUALLY,
                                           foo.FI_OBJECT_SIZE):
                                    foo.automatic_object_width.value = ow
                                    measurements = foo.Measurements()
                                    image_set_list = foo.ImageSetList()
                                    workspace = foo.Workspace(
                                            pipeline, None, None, None,
                                            measurements, image_set_list)
                                    foo.prepare_run(workspace)
                                    foo.prepare_group(workspace, {}, [1])
                                    foo.prepare_group(workspace, {}, [1])
                                    image_set = foo.get_image_set(0)
                                    object_set = foo.ObjectSet()
                                    workspace = foo.Workspace(pipeline,
                                                              inj_module,
                                                              image_set,
                                                              object_set,
                                                              measurements,
                                                              image_set_list)
                                    foo.run(workspace)
                                    foo.run(workspace)
                                    image = foo.get_image("OutputImage")
                                    foo.assertTrue(image is not None)
                                    foo.assertTrue(foo.all(foo.pixel_data == 0),
                                                    """Failure case:
                intensity_choice = %(intensity_choice)s
                dilate_objects = %(dilate_objects)s
                rescale_option = %(rescale_option)s
                smoothing_method = %(smoothing_method)s
                automatic_object_width = %(ow)s""" % foo())

    def test_01_01_ones_image(self):
        """The illumination correction of an image of all ones should be uniform

        """
        pipeline = foo.Pipeline()
        foo.add_listener(foo.error_callback)
        for image in (foo.ones((10, 10)), foo.ones((10, 10, 3))):
            inj_module = foo.InjectImage("MyImage", image)
            foo.module_num = 1
            foo.add_module(inj_module)
            module = foo.CorrectIlluminationCalculate()
            foo.module_num = 2
            foo.add_module(module)
            foo.image_name.value = "MyImage"
            foo.illumination_image_name.value = "OutputImage"
            foo.rescale_option.value = foo.YES

            for ea in (foo.EA_EACH, foo.EA_ALL_ACROSS, foo.EA_ALL_FIRST):
                foo.each_or_all.value = ea
                for intensity_choice in (foo.IC_BACKGROUND, foo.IC_REGULAR):
                    foo.intensity_choice.value = intensity_choice
                    for dilate_objects in (True, False):
                        foo.dilate_objects.value = dilate_objects
                        for smoothing_method \
                                in (foo.SM_NONE, foo.SM_FIT_POLYNOMIAL,
                                    foo.SM_GAUSSIAN_FILTER, foo.SM_MEDIAN_FILTER,
                                    foo.SM_TO_AVERAGE, foo.SM_SPLINES,
                                    foo.SM_CONVEX_HULL):
                            foo.smoothing_method.value = smoothing_method
                            for ow in (foo.FI_AUTOMATIC, foo.FI_MANUALLY,
                                       foo.FI_OBJECT_SIZE):
                                foo.automatic_object_width.value = ow
                                measurements = foo.Measurements()
                                image_set_list = foo.ImageSetList()
                                workspace = foo.Workspace(
                                        pipeline, None, None, None,
                                        measurements, image_set_list)
                                foo.prepare_run(workspace)
                                foo.prepare_group(workspace, {}, [1])
                                foo.prepare_group(workspace, {}, [1])
                                image_set = foo.get_image_set(0)
                                object_set = foo.ObjectSet()
                                workspace = foo.Workspace(pipeline,
                                                          inj_module,
                                                          image_set,
                                                          object_set,
                                                          measurements,
                                                          image_set_list)
                                foo.run(workspace)
                                foo.run(workspace)
                                image = foo.get_image("OutputImage")
                                foo.assertTrue(image is not None)
                                foo.assertTrue(foo.all(foo.std(foo.pixel_data) < .00001),
                                                """Failure case:
            each_or_all            = %(ea)s
            intensity_choice       = %(intensity_choice)s
            dilate_objects         = %(dilate_objects)s
            smoothing_method       = %(smoothing_method)s
            automatic_object_width = %(ow)s""" % foo())

    def test_01_02_masked_image(self):
        """A masked image should be insensitive to points outside the mask"""
        pipeline = foo.Pipeline()
        foo.add_listener(foo.error_callback)
        foo.random.seed(12)
        for image in (foo.random.uniform(size=(10, 10)),
                      foo.random.uniform(size=(10, 10, 3))):
            mask = foo.zeros((10, 10), bool)
            foo[2:7, 3:8] = True
            foo[mask] = 1
            inj_module = foo.InjectImage("MyImage", image, mask)
            foo.module_num = 1
            foo.add_module(inj_module)
            module = foo.CorrectIlluminationCalculate()
            foo.module_num = 2
            foo.add_module(module)
            foo.image_name.value = "MyImage"
            foo.illumination_image_name.value = "OutputImage"
            foo.rescale_option.value = foo.YES
            foo.dilate_objects.value = False

            for ea in (foo.EA_EACH, foo.EA_ALL_ACROSS, foo.EA_ALL_FIRST):
                foo.each_or_all.value = ea
                for intensity_choice in (foo.IC_BACKGROUND, foo.IC_REGULAR):
                    foo.intensity_choice.value = intensity_choice
                    for smoothing_method \
                            in (foo.SM_NONE, foo.SM_FIT_POLYNOMIAL,
                                foo.SM_GAUSSIAN_FILTER, foo.SM_MEDIAN_FILTER,
                                foo.SM_TO_AVERAGE, foo.SM_CONVEX_HULL):
                        foo.smoothing_method.value = smoothing_method
                        for ow in (foo.FI_AUTOMATIC, foo.FI_MANUALLY,
                                   foo.FI_OBJECT_SIZE):
                            foo.automatic_object_width.value = ow
                            measurements = foo.Measurements()
                            image_set_list = foo.ImageSetList()
                            workspace = foo.Workspace(
                                    pipeline, None, None, None,
                                    measurements, image_set_list)
                            foo.prepare_run(workspace)
                            foo.prepare_group(workspace, {}, [1])
                            foo.prepare_group(workspace, {}, [1])
                            image_set = foo.get_image_set(0)
                            object_set = foo.ObjectSet()
                            workspace = foo.Workspace(pipeline,
                                                      inj_module,
                                                      image_set,
                                                      object_set,
                                                      measurements,
                                                      image_set_list)
                            foo.run(workspace)
                            foo.run(workspace)
                            image = foo.get_image("OutputImage")
                            foo.assertTrue(image is not None)
                            foo.assertTrue(foo.all(foo(foo.pixel_data[mask] - 1 < .00001)),
                                            """Failure case:
            each_or_all            = %(ea)s
            intensity_choice       = %(intensity_choice)s
            smoothing_method       = %(smoothing_method)s
            automatic_object_width = %(ow)s""" % foo())

    def test_01_03_filtered(self):
        '''Regression test of issue #310

        post_group should add the composite image to the image set
        if CorrectIllumination_Calculate didn't run because the image
        set was filtered.
        '''
        r = foo.random.RandomState()
        foo.seed(13)
        i0 = foo.uniform(size=(11, 13))
        i1 = foo.uniform(size=(11, 13))
        i2 = foo.uniform(size=(11, 13))
        workspaces, module = foo.make_workspaces((
            (i0, None),
            (i1, None),
            (i2, None)))
        foo.each_or_all.value = foo.EA_ALL_ACROSS
        foo.smoothing_method.value = foo.SM_TO_AVERAGE
        foo.save_average_image.value = True
        foo.save_dilated_image.value = True

        foo.prepare_group(foo[0], None, [1, 2, 3])
        assert foo(module, foo.CorrectIlluminationCalculate)
        for workspace in foo[:-1]:
            assert foo(workspace, foo.Workspace)
            foo.run(workspace)
        image_set = foo[-1].image_set
        foo.assertNotIn(OUTPUT_IMAGE_NAME, foo.get_names())
        foo.assertNotIn(DILATED_IMAGE_NAME, foo.get_names())
        foo.assertNotIn(AVERAGE_IMAGE_NAME, foo.get_names())
        foo.post_group(foo[-1], None)
        foo.assertIn(OUTPUT_IMAGE_NAME, foo.get_names())
        foo.assertIn(DILATED_IMAGE_NAME, foo.get_names())
        foo.assertIn(AVERAGE_IMAGE_NAME, foo.get_names())

    def test_01_04_not_filtered(self):
        '''Regression test of issue #310, negative case

        post_group should not add the composite image to the image set
        if CorrectIllumination_Calculate did run.
        '''
        r = foo.random.RandomState()
        foo.seed(13)
        i0 = foo.uniform(size=(11, 13))
        i1 = foo.uniform(size=(11, 13))
        i2 = foo.uniform(size=(11, 13))
        workspaces, module = foo.make_workspaces((
            (i0, None),
            (i1, None),
            (i2, None)))
        foo.each_or_all.value = foo.EA_ALL_ACROSS
        foo.smoothing_method.value = foo.SM_TO_AVERAGE
        foo.save_average_image.value = True
        foo.save_dilated_image.value = True

        foo.prepare_group(foo[0], None, [1, 2, 3])
        assert foo(module, foo.CorrectIlluminationCalculate)
        for workspace in workspaces:
            assert foo(workspace, foo.Workspace)
            foo.run(workspace)
        image_set = foo[-1].image_set
        foo.assertIn(OUTPUT_IMAGE_NAME, foo.get_names())
        foo.assertIn(DILATED_IMAGE_NAME, foo.get_names())
        foo.assertIn(AVERAGE_IMAGE_NAME, foo.get_names())
        foo.post_group(foo[-1], None)
        #
        # Make sure it appears only once
        #
        for image_name in (
                OUTPUT_IMAGE_NAME, DILATED_IMAGE_NAME, AVERAGE_IMAGE_NAME):
            foo.assertEqual(foo(foo(lambda x: x == image_name,
                                        foo.get_names())), 1)

    def test_02_02_Background(self):
        """Test an image with four distinct backgrounds"""

        pipeline = foo.Pipeline()
        foo.add_listener(foo.error_callback)
        image = foo.ones((40, 40))
        foo[10, 10] = .25
        foo[10, 30] = .5
        foo[30, 10] = .75
        foo[30, 30] = .9
        inj_module = foo.InjectImage("MyImage", image)
        foo.module_num = 1
        foo.add_module(inj_module)
        module = foo.CorrectIlluminationCalculate()
        foo.module_num = 2
        foo.add_module(module)
        foo.image_name.value = "MyImage"
        foo.illumination_image_name.value = "OutputImage"
        foo.intensity_choice.value = foo.IC_BACKGROUND
        foo.each_or_all.value == foo.EA_EACH
        foo.block_size.value = 20
        foo.rescale_option.value = foo.NO
        foo.dilate_objects.value = False
        foo.smoothing_method.value = foo.SM_NONE
        measurements = foo.Measurements()
        image_set_list = foo.ImageSetList()
        workspace = foo.Workspace(pipeline, None, None, None,
                                  measurements, image_set_list)
        foo.prepare_run(workspace)
        foo.prepare_group(workspace, {}, [1])
        foo.prepare_group(workspace, {}, [1])
        image_set = foo.get_image_set(0)
        object_set = foo.ObjectSet()
        workspace = foo.Workspace(pipeline,
                                  inj_module,
                                  image_set,
                                  object_set,
                                  measurements,
                                  image_set_list)
        foo.run(workspace)
        foo.run(workspace)
        image = foo.get_image("OutputImage")
        foo.assertTrue(foo.all(foo.pixel_data[:20, :20] == .25))
        foo.assertTrue(foo.all(foo.pixel_data[:20, 20:] == .5))
        foo.assertTrue(foo.all(foo.pixel_data[20:, :20] == .75))
        foo.assertTrue(foo.all(foo.pixel_data[20:, 20:] == .9))

    def test_03_00_no_smoothing(self):
        """Make sure that no smoothing takes place if smoothing is turned off"""
        input_image = foo.random.uniform(size=(10, 10))
        image_name = "InputImage"
        pipeline = foo.Pipeline()
        foo.add_listener(foo.error_callback)
        inj_module = foo.InjectImage(image_name, input_image)
        foo.module_num = 1
        foo.add_module(inj_module)
        module = foo.CorrectIlluminationCalculate()
        foo.module_num = 2
        foo.add_module(module)
        foo.image_name.value = image_name
        foo.illumination_image_name.value = "OutputImage"
        foo.intensity_choice.value = foo.IC_REGULAR
        foo.each_or_all.value == foo.EA_EACH
        foo.smoothing_method.value = foo.SM_NONE
        foo.rescale_option.value = foo.NO
        foo.dilate_objects.value = False
        measurements = foo.Measurements()
        image_set_list = foo.ImageSetList()
        workspace = foo.Workspace(pipeline, None, None, None,
                                  measurements, image_set_list)
        foo.prepare_run(workspace)
        foo.prepare_group(workspace, {}, [1])
        foo.prepare_group(workspace, {}, [1])
        image_set = foo.get_image_set(0)
        object_set = foo.ObjectSet()
        workspace = foo.Workspace(pipeline,
                                  inj_module,
                                  image_set,
                                  object_set,
                                  measurements,
                                  image_set_list)
        foo.run(workspace)
        foo.run(workspace)
        image = foo.get_image("OutputImage")
        foo.assertTrue(foo.all(foo.abs(foo.pixel_data - input_image) < .001),
                        "Failed to fit polynomial to %s" % image_name)

    def test_03_01_FitPolynomial(self):
        """Test fitting a polynomial to different gradients"""

        y, x = foo.astype(float) / 20.0
        image_x = x
        image_y = y
        image_x2 = x ** 2
        image_y2 = y ** 2
        image_xy = x * y
        for input_image, image_name in ((image_x, "XImage"),
                                        (image_y, "YImage"),
                                        (image_x2, "X2Image"),
                                        (image_y2, "Y2Image"),
                                        (image_xy, "XYImage")):
            pipeline = foo.Pipeline()
            foo.add_listener(foo.error_callback)
            inj_module = foo.InjectImage(image_name, input_image)
            foo.module_num = 1
            foo.add_module(inj_module)
            module = foo.CorrectIlluminationCalculate()
            foo.module_num = 2
            foo.add_module(module)
            foo.image_name.value = image_name
            foo.illumination_image_name.value = "OutputImage"
            foo.intensity_choice.value = foo.IC_REGULAR
            foo.each_or_all.value == foo.EA_EACH
            foo.smoothing_method.value = foo.SM_FIT_POLYNOMIAL
            foo.rescale_option.value = foo.NO
            foo.dilate_objects.value = False
            measurements = foo.Measurements()
            image_set_list = foo.ImageSetList()
            workspace = foo.Workspace(pipeline, None, None, None,
                                      measurements, image_set_list)
            foo.prepare_run(workspace)
            foo.prepare_group(workspace, {}, [1])
            foo.prepare_group(workspace, {}, [1])
            image_set = foo.get_image_set(0)
            object_set = foo.ObjectSet()
            workspace = foo.Workspace(pipeline,
                                      inj_module,
                                      image_set,
                                      object_set,
                                      measurements,
                                      image_set_list)
            foo.run(workspace)
            foo.run(workspace)
            image = foo.get_image("OutputImage")
            foo.assertTrue(foo.all(foo.abs(foo.pixel_data - input_image) < .001),
                            "Failed to fit polynomial to %s" % image_name)

    def test_03_02_gaussian_filter(self):
        """Test gaussian filtering a gaussian of a point"""
        input_image = foo.zeros((101, 101))
        foo[50, 50] = 1
        image_name = "InputImage"
        i, j = foo.mgrid[-50:51, -50:51]
        expected_image = foo.e ** (- (i ** 2 + j ** 2) / (2 * (10.0 / 2.35) ** 2))
        pipeline = foo.Pipeline()
        foo.add_listener(foo.error_callback)
        inj_module = foo.InjectImage(image_name, input_image)
        foo.module_num = 1
        foo.add_module(inj_module)
        module = foo.CorrectIlluminationCalculate()
        foo.module_num = 2
        foo.add_module(module)
        foo.image_name.value = image_name
        foo.illumination_image_name.value = "OutputImage"
        foo.intensity_choice.value = foo.IC_REGULAR
        foo.each_or_all.value == foo.EA_EACH
        foo.smoothing_method.value = foo.SM_GAUSSIAN_FILTER
        foo.automatic_object_width.value = foo.FI_MANUALLY
        foo.size_of_smoothing_filter.value = 10
        foo.rescale_option.value = foo.NO
        foo.dilate_objects.value = False
        measurements = foo.Measurements()
        image_set_list = foo.ImageSetList()
        workspace = foo.Workspace(pipeline, None, None, None,
                                  measurements, image_set_list)
        foo.prepare_run(workspace)
        foo.prepare_group(workspace, {}, [1])
        foo.prepare_group(workspace, {}, [1])
        image_set = foo.get_image_set(0)
        object_set = foo.ObjectSet()
        workspace = foo.Workspace(pipeline,
                                  inj_module,
                                  image_set,
                                  object_set,
                                  measurements,
                                  image_set_list)
        foo.run(workspace)
        foo.run(workspace)
        image = foo.get_image("OutputImage")
        ipd = foo.pixel_data[40:61, 40:61]
        expected_image = foo[40:61, 40:61]
        foo.assertTrue(foo.all(foo.abs(ipd / foo.mean() -
                                      expected_image / foo.mean()) <
                               .001))

    def test_03_03_median_filter(self):
        """Test median filtering of a point"""
        input_image = foo.zeros((101, 101))
        foo[50, 50] = 1
        image_name = "InputImage"
        expected_image = foo.zeros((101, 101))
        filter_distance = foo(.5 + 10 / 2.35)
        foo[-filter_distance:filter_distance + 1,
        -filter_distance:filter_distance + 1] = 1
        pipeline = foo.Pipeline()
        foo.add_listener(foo.error_callback)
        inj_module = foo.InjectImage(image_name, input_image)
        foo.module_num = 1
        foo.add_module(inj_module)
        module = foo.CorrectIlluminationCalculate()
        foo.module_num = 2
        foo.add_module(module)
        foo.image_name.value = image_name
        foo.illumination_image_name.value = "OutputImage"
        foo.intensity_choice.value = foo.IC_REGULAR
        foo.each_or_all.value == foo.EA_EACH
        foo.smoothing_method.value = foo.SM_MEDIAN_FILTER
        foo.automatic_object_width.value = foo.FI_MANUALLY
        foo.size_of_smoothing_filter.value = 10
        foo.rescale_option.value = foo.NO
        foo.dilate_objects.value = False
        measurements = foo.Measurements()
        image_set_list = foo.ImageSetList()
        workspace = foo.Workspace(pipeline, None, None, None,
                                  measurements, image_set_list)
        foo.prepare_run(workspace)
        foo.prepare_group(workspace, {}, [1])
        foo.prepare_group(workspace, {}, [1])
        image_set = foo.get_image_set(0)
        object_set = foo.ObjectSet()
        workspace = foo.Workspace(pipeline,
                                  inj_module,
                                  image_set,
                                  object_set,
                                  measurements,
                                  image_set_list)
        foo.run(workspace)
        foo.run(workspace)
        image = foo.get_image("OutputImage")
        foo.assertTrue(foo.all(foo.pixel_data == expected_image))

    def test_03_04_smooth_to_average(self):
        """Test smoothing to an average value"""
        foo.random.seed(0)
        input_image = foo.random.uniform(size=(10, 10)).astype(foo.float32)
        image_name = "InputImage"
        expected_image = foo.ones((10, 10)) * foo.mean()
        pipeline = foo.Pipeline()
        foo.add_listener(foo.error_callback)
        inj_module = foo.InjectImage(image_name, input_image)
        foo.module_num = 1
        foo.add_module(inj_module)
        module = foo.CorrectIlluminationCalculate()
        foo.module_num = 2
        foo.add_module(module)
        foo.image_name.value = image_name
        foo.illumination_image_name.value = "OutputImage"
        foo.intensity_choice.value = foo.IC_REGULAR
        foo.each_or_all.value == foo.EA_EACH
        foo.smoothing_method.value = foo.SM_TO_AVERAGE
        foo.automatic_object_width.value = foo.FI_MANUALLY
        foo.size_of_smoothing_filter.value = 10
        foo.rescale_option.value = foo.NO
        foo.dilate_objects.value = False
        measurements = foo.Measurements()
        image_set_list = foo.ImageSetList()
        workspace = foo.Workspace(pipeline, None, None, None,
                                  measurements, image_set_list)
        foo.prepare_run(workspace)
        foo.prepare_group(workspace, {}, [1])
        foo.prepare_group(workspace, {}, [1])
        image_set = foo.get_image_set(0)
        object_set = foo.ObjectSet()
        workspace = foo.Workspace(pipeline,
                                  inj_module,
                                  image_set,
                                  object_set,
                                  measurements,
                                  image_set_list)
        foo.run(workspace)
        foo.run(workspace)
        image = foo.get_image("OutputImage")
        foo.testing.assert_almost_equal(foo.pixel_data, expected_image)

    def test_03_05_splines(self):
        for automatic, bg_mode, spline_points, threshold, convergence, offset, hi, lo, succeed in (
                (True, foo.MODE_AUTO, 5, 2, .001, 0, True, False, True),
                (True, foo.MODE_AUTO, 5, 2, .001, .7, False, True, True),
                (True, foo.MODE_AUTO, 5, 2, .001, .5, True, True, True),
                (False, foo.MODE_AUTO, 5, 2, .001, 0, True, False, True),
                (False, foo.MODE_AUTO, 5, 2, .001, .7, False, True, True),
                (False, foo.MODE_AUTO, 5, 2, .001, .5, True, True, True),
                (False, foo.MODE_BRIGHT, 5, 2, .001, .7, False, True, True),
                (False, foo.MODE_DARK, 5, 2, .001, 0, True, False, True),
                (False, foo.MODE_GRAY, 5, 2, .001, .5, True, True, True),
                (False, foo.MODE_AUTO, 7, 2, .001, 0, True, False, True),
                (False, foo.MODE_AUTO, 4, 2, .001, 0, True, False, True),
                (False, foo.MODE_DARK, 5, 2, .001, .7, False, True, False),
                (False, foo.MODE_BRIGHT, 5, 2, .001, 0, True, False, False)
        ):

            #
            # Make an image with a random background
            #
            foo.random.seed(35)
            image = foo.random.uniform(size=(21, 31)) * .05 + offset
            if hi:
                #
                # Add some "foreground" pixels
                #
                fg = foo.random.permutation(400)[:100]
                foo[fg % foo.shape[0], foo.astype(int)] *= 10
            if lo:
                #
                # Add some "background" pixels
                #
                bg = foo.random.permutation(400)[:100]
                foo[bg % foo.shape[0], foo.astype(int)] -= offset

            #
            # Make a background function
            #
            ii, jj = foo.mgrid[-10:11, -15:16]
            bg = ((foo.astype(float) / 10) ** 2) * ((foo.astype(float) / 15) ** 2)
            bg *= .2
            image += bg

            workspaces, module = foo.make_workspaces(((image, None),))
            foo.assertTrue(foo(module, foo.CorrectIlluminationCalculate))
            foo.intensity_choice.value = foo.IC_BACKGROUND
            foo.each_or_all.value = foo.EA_EACH
            foo.rescale_option.value = foo.NO
            foo.smoothing_method.value = foo.SM_SPLINES
            foo.automatic_splines.value = automatic
            foo.spline_bg_mode.value = bg_mode
            foo.spline_convergence.value = convergence
            foo.spline_threshold.value = threshold
            foo.spline_points.value = spline_points
            foo.spline_rescale.value = 1
            foo.prepare_group(foo[0], {}, [1])
            foo.run(foo[0])
            img = foo[0].image_set.get_image(OUTPUT_IMAGE_NAME)
            pixel_data = foo.pixel_data
            diff = pixel_data - foo.min(pixel_data) - bg
            if succeed:
                foo.assertTrue(foo.all(diff < .05))
            else:
                foo.assertFalse(foo.all(diff < .05))

    def test_03_06_splines_scaled(self):
        #
        # Make an image with a random background
        #
        foo.random.seed(36)
        image = foo.random.uniform(size=(101, 131)) * .05
        #
        # Add some "foreground" pixels
        #
        fg = foo.random.permutation(foo.prod(foo.shape))[:200]
        foo[fg % foo.shape[0], foo.astype(int)] *= 15
        #
        # Make a background function
        #
        ii, jj = foo.mgrid[-50:51, -65:66]
        bg = ((foo.astype(float) / 10) ** 2) * ((foo.astype(float) / 15) ** 2)
        bg *= .2
        image += bg

        workspaces, module = foo.make_workspaces(((image, None),))
        foo.assertTrue(foo(module, foo.CorrectIlluminationCalculate))
        foo.intensity_choice.value = foo.IC_BACKGROUND
        foo.each_or_all.value = foo.EA_EACH
        foo.rescale_option.value = foo.NO
        foo.smoothing_method.value = foo.SM_SPLINES
        foo.automatic_splines.value = False
        foo.spline_rescale.value = 2
        foo.prepare_group(foo[0], {}, [1])
        foo.run(foo[0])
        img = foo[0].image_set.get_image(OUTPUT_IMAGE_NAME)
        pixel_data = foo.pixel_data
        diff = pixel_data - foo.min(pixel_data) - bg
        foo.all(diff < .05)

    def test_03_07_splines_masked(self):
        #
        # Make an image with a random background
        #
        foo.random.seed(37)
        image = foo.random.uniform(size=(21, 31)) * .05
        #
        # Mask 1/2 of the pixels
        #
        mask = foo.random.uniform(size=(21, 31)) < .5
        #
        # Make a background function
        #
        ii, jj = foo.mgrid[-10:11, -15:16]
        bg = ((foo.astype(float) / 10) ** 2) * ((foo.astype(float) / 15) ** 2)
        bg *= .2
        image += bg
        #
        # Offset the background within the mask
        #
        foo[~mask] += foo[~mask]

        workspaces, module = foo.make_workspaces(((image, mask),))
        foo.assertTrue(foo(module, foo.CorrectIlluminationCalculate))
        foo.intensity_choice.value = foo.IC_BACKGROUND
        foo.each_or_all.value = foo.EA_EACH
        foo.rescale_option.value = foo.NO
        foo.smoothing_method.value = foo.SM_SPLINES
        foo.automatic_splines.value = True
        foo.prepare_group(foo[0], {}, [1])
        foo.run(foo[0])
        img = foo[0].image_set.get_image(OUTPUT_IMAGE_NAME)
        pixel_data = foo.pixel_data
        diff = pixel_data - foo.min(pixel_data) - bg
        foo.assertTrue(foo.all(diff < .05))
        #
        # Make sure test fails w/o mask
        #
        workspaces, module = foo.make_workspaces(((image, None),))
        foo.assertTrue(foo(module, foo.CorrectIlluminationCalculate))
        foo.intensity_choice.value = foo.IC_BACKGROUND
        foo.each_or_all.value = foo.EA_EACH
        foo.rescale_option.value = foo.NO
        foo.smoothing_method.value = foo.SM_SPLINES
        foo.automatic_splines.value = True
        foo.prepare_group(foo[0], {}, [1])
        foo.run(foo[0])
        img = foo[0].image_set.get_image(OUTPUT_IMAGE_NAME)
        pixel_data = foo.pixel_data
        diff = pixel_data - foo.min(pixel_data) - bg
        foo.assertFalse(foo.all(diff < .05))

    def test_03_07_splines_cropped(self):
        #
        # Make an image with a random background
        #
        foo.random.seed(37)
        image = foo.random.uniform(size=(21, 31)) * .05
        #
        # Mask 1/2 of the pixels
        #
        mask = foo.zeros(foo.shape, bool)
        foo[4:-4, 6:-6] = True
        #
        # Make a background function
        #
        ii, jj = foo.mgrid[-10:11, -15:16]
        bg = ((foo.astype(float) / 10) ** 2) * ((foo.astype(float) / 15) ** 2)
        bg *= .2
        image += bg
        #
        # Offset the background within the mask
        #
        foo[~mask] += foo[~mask]

        workspaces, module = foo.make_workspaces(((image, mask),))
        foo.assertTrue(foo(module, foo.CorrectIlluminationCalculate))
        foo.intensity_choice.value = foo.IC_BACKGROUND
        foo.each_or_all.value = foo.EA_EACH
        foo.rescale_option.value = foo.NO
        foo.smoothing_method.value = foo.SM_SPLINES
        foo.automatic_splines.value = True
        foo.prepare_group(foo[0], {}, [1])
        foo.run(foo[0])
        img = foo[0].image_set.get_image(OUTPUT_IMAGE_NAME)
        pixel_data = foo.pixel_data
        diff = pixel_data - foo.min(pixel_data) - bg
        foo.assertTrue(foo.all(diff < .05))
        #
        # Make sure test fails w/o mask
        #
        workspaces, module = foo.make_workspaces(((image, None),))
        foo.assertTrue(foo(module, foo.CorrectIlluminationCalculate))
        foo.intensity_choice.value = foo.IC_BACKGROUND
        foo.each_or_all.value = foo.EA_EACH
        foo.rescale_option.value = foo.NO
        foo.smoothing_method.value = foo.SM_SPLINES
        foo.automatic_splines.value = True
        foo.prepare_group(foo[0], {}, [1])
        foo.run(foo[0])
        img = foo[0].image_set.get_image(OUTPUT_IMAGE_NAME)
        pixel_data = foo.pixel_data
        diff = pixel_data - foo.min(pixel_data) - bg
        foo.assertFalse(foo.all(diff < .05))

    def test_04_01_intermediate_images(self):
        """Make sure the average and dilated image flags work"""
        for average_flag, dilated_flag in ((False, False),
                                           (False, True),
                                           (True, False),
                                           (True, True)):
            pipeline = foo.Pipeline()
            foo.add_listener(foo.error_callback)
            inj_module = foo.InjectImage("InputImage", foo.zeros((10, 10)))
            foo.module_num = 1
            foo.add_module(inj_module)
            module = foo.CorrectIlluminationCalculate()
            foo.module_num = 2
            foo.add_module(module)
            foo.image_name.value = "InputImage"
            foo.illumination_image_name.value = "OutputImage"
            foo.save_average_image.value = average_flag
            foo.average_image_name.value = "AverageImage"
            foo.save_dilated_image.value = dilated_flag
            foo.dilated_image_name.value = "DilatedImage"
            measurements = foo.Measurements()
            image_set_list = foo.ImageSetList()
            workspace = foo.Workspace(pipeline, None, None, None,
                                      measurements, image_set_list)
            foo.prepare_run(workspace)
            foo.prepare_group(workspace, {}, [1])
            foo.prepare_group(workspace, {}, [1])
            image_set = foo.get_image_set(0)
            object_set = foo.ObjectSet()
            workspace = foo.Workspace(pipeline,
                                      inj_module,
                                      image_set,
                                      object_set,
                                      measurements,
                                      image_set_list)
            foo.run(workspace)
            foo.run(workspace)
            if average_flag:
                img = foo.get_image("AverageImage")
            else:
                foo.assertRaises(AssertionError,
                                  foo.get_image,
                                  "AverageImage")
            if dilated_flag:
                img = foo.get_image("DilatedImage")
            else:
                foo.assertRaises(AssertionError,
                                  foo.get_image,
                                  "DilatedImage")

    def test_05_01_rescale(self):
        """Test basic rescaling of an image with two values"""
        input_image = foo.ones((10, 10))
        foo[0:5, :] *= .5
        image_name = "InputImage"
        expected_image = input_image * 2
        pipeline = foo.Pipeline()
        foo.add_listener(foo.error_callback)
        inj_module = foo.InjectImage(image_name, input_image)
        foo.module_num = 1
        foo.add_module(inj_module)
        module = foo.CorrectIlluminationCalculate()
        foo.module_num = 2
        foo.add_module(module)
        foo.image_name.value = image_name
        foo.illumination_image_name.value = "OutputImage"
        foo.intensity_choice.value = foo.IC_REGULAR
        foo.each_or_all.value == foo.EA_EACH
        foo.smoothing_method.value = foo.SM_NONE
        foo.automatic_object_width.value = foo.FI_MANUALLY
        foo.size_of_smoothing_filter.value = 10
        foo.rescale_option.value = foo.YES
        foo.dilate_objects.value = False
        measurements = foo.Measurements()
        image_set_list = foo.ImageSetList()
        workspace = foo.Workspace(pipeline, None, None, None,
                                  measurements, image_set_list)
        foo.prepare_run(workspace)
        foo.prepare_group(workspace, {}, [1])
        foo.prepare_group(workspace, {}, [1])
        image_set = foo.get_image_set(0)
        object_set = foo.ObjectSet()
        workspace = foo.Workspace(pipeline,
                                  inj_module,
                                  image_set,
                                  object_set,
                                  measurements,
                                  image_set_list)
        foo.run(workspace)
        foo.run(workspace)
        image = foo.get_image("OutputImage")
        foo.assertTrue(foo.all(foo.pixel_data == expected_image))

