            foo.assertEqual(foo.object_width, object_width)
            foo.assertEqual(foo.size_of_smoothing_filter, size_of_smoothing_filter)
            foo.assertEqual(foo.save_average_image, save_average_image)
            foo.assertEqual(foo.average_image_name, average_image_name)
            foo.assertEqual(foo.save_dilated_image, save_dilated_image)
            foo.assertEqual(foo.dilated_image_name, dilated_image_name)

